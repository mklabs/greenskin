#!/bin/sh

#
# chkconfig: 35 99 99
# description: PhantomJS Webdriver
#

. /etc/rc.d/init.d/functions

# XXX Change that
USER="kookel"

DAEMON="/usr/bin/phantomjs"

LOG_FILE="/opt/kookel/logs/phantomjs.log"

do_start()
{
        echo -n $"Starting phantomjs webdriver: "
        runuser -l "$USER" -c "$DAEMON --webdriver=9134 >>$LOG_FILE 2>&1 &" && echo_success || echo_failure
        RETVAL=$?
        echo
}

do_stop()
{
        echo -n $"Stopping agent: "
        pid=`ps -aefw | grep "phantomjs --webdriver=9134" | grep -v " grep " | awk '{print $2}'`
        kill -9 $pid > /dev/null 2>&1 && echo_success || echo_failure
        RETVAL=$?
        echo
}

do_status()
{
        echo -n $"Status agent: "
        pid=`ps -aefw | grep "phantomjs --webdriver=9134" | grep -v " grep " | awk '{print $2}'`
        echo -n "PID: $pid"
        echo
}

case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        status)
                do_status
                ;;
        restart)
                do_stop
                do_start
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                RETVAL=1
esac

exit $RETVAL
