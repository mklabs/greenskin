#!/bin/sh

#
# chkconfig: 35 99 99
# description: Node.js /opt/kookel/r8_perf/app.js
#

. /etc/rc.d/init.d/functions

# XXX Change that
USER="{{ user }}"

DAEMON="/usr/bin/node"
ROOT_DIR="/opt/webpagetest/agent/js"

LOG_FILE="$ROOT_DIR/agent.log"

do_start()
{
        echo -n $"Starting agent: "
        runuser -l "$USER" -c "DISPLAY=:99 $ROOT_DIR/wptdriver.sh -s http://{{ host_name }}:{{ port_no }} -l Chrome -m debug >>$LOG_FILE 2>&1 &" && echo_success || echo_failure
        RETVAL=$?
        echo
}

do_stop()
{
        echo -n $"Stopping agent: "
        pid=`ps -aefw | grep "node src/agent_main" | grep -v " grep " | awk '{print $2}'`
        kill -9 $pid > /dev/null 2>&1 && echo_success || echo_failure
        RETVAL=$?
        echo
}

do_status()
{
        echo -n $"Status agent: "
        pid=`ps -aefw | grep "node src/agent_main" | grep -v " grep " | awk '{print $2}'`
        echo -n "PID: $pid"
        echo
}

case "$1" in
        start)
                do_start
                ;;
        stop)
                do_stop
                ;;
        status)
                do_status
                ;;
        restart)
                do_stop
                do_start
                ;;
        *)
                echo "Usage: $0 {start|stop|restart}"
                RETVAL=1
esac

exit $RETVAL
