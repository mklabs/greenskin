<div class="content-top clearfix">
  <ul class="breadcrumb al-breadcrumb">
    <li><a href="/">Home</a></li>
    <li>Create Job</li>
  </ul>
</div>


<div class="panel panel-blur">
  <form class="form js-job-form panel panel-blur" method="post" action="/create">
    <div class="panel-heading clearfix">
      <h3 class="panel-title">Create a new Job</h3>
    </div>

    <div class="panel-body">

      {{{ helpers.messages }}}

      <p class="description">
        Fill in the form below to create a new Phantomas Job.
      </p>


      <div class="form-group">
        <label for="ipt_name" class="control-label">Job name</label>
        <input required id="ipt_name" type="text" name="name" class="form-control" value="{{ job.name }}">
      </div>

      <div class="form-group">
        <label for="ipt_frequency" class="control-label">Frequency</label>
        <input required id="ipt_name" type="text" name="frequency" class="form-control" value="{{ job.frequency }}">
      </div>

      <div class="js-urls form-group">
        <label class="control-label">URLs (space separated)</label>
        <input required id="ipt_name" type="text" name="urls" class="form-control" value="{{ job.urls }}">
      </div>

      </fieldset>

      <div class="form-group">
        <label>JSON Config</label>
        <p class="text-muted pull-right">You can configure asserts by editing the asserts property below.</p>
        <textarea rows="10" class="form-control" name="config"
          style="width: 100%; margin-bottom: 0.5em; height: auto;">{{ job.config }}</textarea>
      </div>

      <button type="submit" class="btn btn-primary pull-right">Save</button>

    </div>
  </form>
</div>
