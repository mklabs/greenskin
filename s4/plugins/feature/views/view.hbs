{{#extend 'stylesheets'}}
<style>.panel-body {
  height: 200px;
  overflow: auto;
  border: 1px solid #ccc;
}</style>
{{/extend}}

{{#summary}}
  {{> job_summary }}
{{/summary}}

<!-- Nav tabs -->
{{#tabs tab job}}
  {{#number}}
  <li class="active">
    <a href="#">Build {{ . }}</a>
  </li>
  {{/number}}
{{/tabs}}


<div class="js-build" data-animated="{{ animated }}" data-number="{{ job.lastBuild.number }}" data-last="{{ last }}" data-pending="{{ pending }}">

  <div class="panel-body">
    <table>
      <tr>
      {{#screenshots}}
        <td>
          {{ time }}
        </td>
      {{/screenshots}}
      </tr>

      <tr>
      {{#screenshots}}
        <td>
          <a href="{{ url }}" class="thumbnail">
            <img src="{{ url }}" width="200" height="120">
          </a>
        </td>
      {{/screenshots}}
      </tr>
    </table>
  </div>

  <div class="log-container">
    <pre class="js-log log ansi" style="margin-top: 35px;">{{ build.log }}</pre>
  </div>
</div>
