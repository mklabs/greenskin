<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Testing out phantomas metrics</description>
  <logRotator class="hudson.tasks.LogRotator">
    <daysToKeep>-1</daysToKeep>
    <numToKeep>20</numToKeep>
    <artifactDaysToKeep>-1</artifactDaysToKeep>
    <artifactNumToKeep>-1</artifactNumToKeep>
  </logRotator>
  <keepDependencies>false</keepDependencies>
  <properties>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>JSON_CONFIG</name>
          <description>JSON config.</description>
          <defaultValue><![CDATA[]]></defaultValue>
        </hudson.model.StringParameterDefinition>
        <hudson.model.StringParameterDefinition>
          <name>DEBUG</name>
          <description>Log debug option</description>
          <defaultValue>*</defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.scm.NullSCM"/>
  <assignedNode>jenkins-slave</assignedNode>
  <canRoam>false</canRoam>
  <disabled>false</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>false</blockBuildWhenUpstreamBuilding>
  <triggers>
    <hudson.triggers.TimerTrigger>
      <spec>*/20 * * * *</spec>
    </hudson.triggers.TimerTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>echo &quot;{}&quot; &gt; package.json
[ -e node_modules ] || npm install phantomjs mklabs/wd-gherkin wd</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>echo &quot;$JSON_CONFIG&quot; &gt; config.json
mkdir -p tmp</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>#!/bin/bash

WD_PORT=${WD_PORT:-9134}

pidfile=tmp/phantomjs.pid

[ -e $pidfile ] &amp;&amp; echo &quot;PhantomJS started. tmp/phantomjs.pid exists.&quot; &amp;&amp; exit 0;

echo &quot;Starting PhantomJS WebDriver on port $WD_PORT&quot;
echo &quot;phantomjs --webdriver=$WD_PORT &gt;&gt; tmp/phantomjs.log &amp;&quot;
./node_modules/.bin/phantomjs --webdriver=$WD_PORT &gt;tmp/phantomjs.log 2&gt;&amp;1 &amp;
pid=$!

echo $pid &gt; $pidfile

echo &quot;... Waiting a bit for PhantomJS to start ...&quot;
sleep 1



</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>./node_modules/.bin/gherkin-mocha --screendir ./tmp</command>
    </hudson.tasks.Shell>
    <hudson.tasks.Shell>
      <command>find ./tmp -type f &gt; files.txt</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers>
    <hudson.tasks.Mailer plugin="mailer@1.10">
      <recipients>mickael.daniel@kelkoo.fr daniel.mickael@gmail.com</recipients>
      <dontNotifyEveryUnstableBuild>false</dontNotifyEveryUnstableBuild>
      <sendToIndividuals>false</sendToIndividuals>
    </hudson.tasks.Mailer>
    <hudson.plugins.parameterizedtrigger.BuildTrigger plugin="parameterized-trigger@2.25">
      <configs>
        <hudson.plugins.parameterizedtrigger.BuildTriggerConfig>
          <configs>
            <hudson.plugins.parameterizedtrigger.PredefinedBuildParameters>
              <properties>UPSTREAM_WORKSPACE=$WORKSPACE</properties>
            </hudson.plugins.parameterizedtrigger.PredefinedBuildParameters>
          </configs>
          <projects>webdriver_kill, </projects>
          <condition>ALWAYS</condition>
          <triggerWithNoParameters>false</triggerWithNoParameters>
        </hudson.plugins.parameterizedtrigger.BuildTriggerConfig>
      </configs>
    </hudson.plugins.parameterizedtrigger.BuildTrigger>
  </publishers>
  <buildWrappers/>
</project>
