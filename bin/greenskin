#!/usr/bin/env node

process.env.DEBUG = process.env.DEBUG || 'phantomas:engines greenskin*';

var opts  = require('minimist')(process.argv.slice(2));
var debug = require('debug')('greenskin');


var greenskin = require('..');

// Config

opts.port = opts.port || 3000;
opts.db = opts.db || 'mongodb://localhost/greenskin';

greenskin.start(opts)
  .catch((err) => {
    throw err;
  })
  .then(() => {
    debug('Started server on http://localhost:%d', opts.port);
  });
